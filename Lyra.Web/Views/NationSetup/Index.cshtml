@model Lyra.Web.Controllers.CountryViewModel

@{
    ViewData["Title"] = "Setup";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<h2>Setup</h2>

<h4>Nation Setup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Setup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create!" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

